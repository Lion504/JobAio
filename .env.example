# ===========================================
# JobAio Environment Configuration
# ===========================================

# ------------------------------------------
# DATABASE CONFIGURATION
# ------------------------------------------

# MongoDB connection string for local development
MONGODB_URI=mongodb://localhost:27017/jobaio

# Server port for the API
PORT=5001

# ------------------------------------------
# AI/ML CONFIGURATION
# ------------------------------------------

# AI Provider Selection: "gemini" or "local"
AI_CHOICE=gemini

# Google Gemini AI (Primary AI Provider)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_NAME=gemini-2.5-flash

# Ollama Configuration (For local AI models)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=my-ollama-model

# ------------------------------------------
# DEVELOPMENT CONFIGURATION
# ------------------------------------------

# Application environment
NODE_ENV=development

# Frontend application URLs
WEB_APP_URL=http://localhost:5173
WEB_APP_BACKEND_ENDPOINT=http://localhost:5001

# ------------------------------------------
# OPTIONAL CONFIGURATION
# ------------------------------------------

# Logging level: "error", "warn", "info", "debug"
LOG_LEVEL=info
