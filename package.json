{
  "name": "jobaio",
  "private": true,
  "license": "MIT",
  "packageManager": "bun@1.1.45",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:web\"",
    "dev:web": "cd apps/web && bun run dev",
    "dev:api": "cd apps/api && bun run dev",
    "jobs": "cd apps/scraper-py && call venv\\Scripts\\python.exe src/main.py",
    "build": "echo 'Add build script later'",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:ai": "cd packages/ai && bun run test",
    "test:py": "cd apps/scraper-py && call venv\\Scripts\\python.exe -m pytest",
    "lint:web": "cd apps/web && bun run lint",
    "lint:api": "cd apps/api && bun run lint",
    "lint:py": "cd apps/scraper-py && bun run lint",
    "lint": "bun run lint:web && bun run lint:api && bun run lint:py",
    "lint:fix": "bun run lint:web -- --fix && bun run lint:api -- --fix && bun run lint:py:fix",
    "lint:py:fix": "cd apps/scraper-py && bun run lint:fix",
    "format": "cd apps/web && bun run format && cd ../api && bun run format && cd ../scraper-py && node python-tools.js format",
    "format:check": "cd apps/web && bun run format:check && cd ../api && bun run format:check && cd ../scraper-py && node python-tools.js format:check",
    "clean": "npx del-cli \"apps/*/node_modules\" \"packages/*/node_modules\" node_modules dist .next"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "franc": "^6.2.0",
    "mongoose": "^8.19.4",
    "mongoose-sequence": "^6.0.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.4"
  }
}
